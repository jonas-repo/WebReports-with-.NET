
@{
    ViewBag.Title = "Domicilio";
}

<!-- Content Start -->
<div id="main">

    <!-- Title, Breadcrumb Start-->
    <div class="breadcrumb-wrapper">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-6 col-xs-12 col-sm-6">
                    <h2 class="title">Dirección de la falla</h2>
                </div>
                <div class="col-lg-6 col-md-6 col-xs-12 col-sm-6">
                    <div class="breadcrumbs pull-right">
                        <ul>
                            <li>Estas aquí:</li>
                            <li><a href="@Url.Action("Index","Home")">Inicio</a></li>
                            <li>Domicilio</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Title, Breadcrumb End-->
    <!-- Main Content start-->
    <div class="content">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <h3 class="title">Ubicación de la falla</h3>
                    <p><strong>Falla numero @ViewBag.idfalla</strong></p>
                    <div id="maps" class="google-maps">
                    </div>
                    <!-- Left Section End -->
                </div>
            </div>
            <div class="divider"></div>
        </div>
    </div>
    <!-- Main Content end-->
</div>
<!-- Content End -->
<!-- The Scripts -->
@section scripts{
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/bootstrap.js"></script>
    <script src="~/js/jquery.parallax.js"></script>
    @*<script src="~/js/jquery.wait.js"></script>*@
    <script src="~/js/modernizr-2.6.2.min.js"></script>
    @*<script src="~/js/revolution-slider/js/jquery.themepunch.revolution.min.js"></script>*@
    <script src="~/js/jquery.nivo.slider.pack.js"></script>
    <script src="~/js/jquery.prettyPhoto.js"></script>
    <script src="~/js/superfish.js"></script>
    <script src="~/js/tytabs.js"></script>
    <script src="~/js/jquery.sticky.js"></script>
    <script src="~/js/jflickrfeed.js"></script>
    <script src="~/js/imagesloaded.pkgd.min.js"></script>
    <script src="~/js/waypoints.min.js"></script>
    @*<script src="~/js/jquery.gmap.min.js"></script>*@
    <script src="~/js/spectrum.js"></script>
    <script src="~/js/switcher.js"></script>
    <script src="~/js/custom.js"></script>

    <script async defer
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDb1lMnlASUsVRfkbQLH_h615d1nkq-hek&callback=initMap">
    </script>
    <script>
    function initMap() {
        var myLatLng = { lat: @ViewBag.lat, lng: @ViewBag.lon };

        var map = new google.maps.Map(document.getElementById('maps'), {
            zoom: 18,
            center: myLatLng
        });

        var marker = new google.maps.Marker({
            position: myLatLng,
            map: map,
            title: 'Dirección de la falla'
        });
    }
    </script>
}

